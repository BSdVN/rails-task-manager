<h1 class="title"><i class="far fa-edit"></i>Edit Task</h1>

<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :details %>
  <%= f.text_field :details %>

  <%= f.label :completed %>
  <%= f.check_box :completed %>

  <%=f.submit  %>
<% end %>

<i class="fas fa-undo-alt"></i><%= link_to "Back to tasks list", tasks_path %>
